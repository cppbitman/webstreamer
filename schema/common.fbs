namespace webstreamer;


table Channel
{
    name       : string;
    codec      : string; //media codec format 
                         // H264/H265/VP8
                         // G711A/OPUS
    mode       : string; //channel mode 
                         // sendonly/recvonly/sendrecv
}

table Endpoint
{
    name       : string;    
    url        : string;
    initiative : bool;      //for WebRTC the initiative one is offer sender
    channel    : [Channel]; //channels of the Endpoint
}


table Topic
{
   type      : string; //type of the topic
                       //WebRTC.JSEP

   component : string; //name of the component
   endpoint  : string; //name of the endpoint

   content   : string; //topic conent, format defined according type

}

table Subscription
{
   type      : [string]; //subscription of the topics
   component : string;   //name of the component
   endpoint  : string;   //name of the endpoint    
}